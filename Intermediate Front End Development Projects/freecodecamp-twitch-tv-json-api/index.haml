.container-fluid
  .row
    .title
      .fas.fa-circle
      %span LIVE
      on twitch
  .row
    .utility.col-md-3
      .wrapper.sticky-top
        %h2 MENU
        %h5 FILTERS
        .row#filters
          .col-md-12.col-sm-6
            %button.btn.btn-outline-info.active#filter-all ALL
            %button.btn.btn-outline-success#filter-online ONLINE
          .col-md-12.col-sm-6
            %button.btn.btn-outline-danger#filter-offline OFFLINE
            %input.btn#filter-search{:type => "search",
                                     :placeholder => "SEARCH",
                                     :autocomplete => "off"}
        -# %h5 SORT
        -# .row#sorts
        -#   .col-md-12.col-sm-4.col-xs-4
        -#     %button.btn.btn-outline-warning#sortAZ A - Z
        -#   .col-md-12.col-sm-4.col-xs-4
        -#     %button.btn.btn-outline-warning#sortLive LIVE
        -#   .col-md-12.col-sm-4.col-xs-4
        -#     %button.btn.btn-outline-warning#sortViews VIEWERS
          
    .data.col-md-9
      .loading-icon
        .load-anim
      .wrapper
        .loading-icon
          .load-anim
        - maxStreamers = 50
        - (0..maxStreamers).each do |i|
          %a.card.d-none{:href => "#", :target => "_blank", :id => "result#{i}"}
            %img.card-img-top
            %h3.card-header 
              %img.logo
              .head
            .card-body
              %h5.card-title
              %h6.card-subtitle
              %p.card-text
  %a.footer{:href => "https://dev.twitch.tv/", :target => "_blank"} 
    POWERED BY
    .fab.fa-twitch
